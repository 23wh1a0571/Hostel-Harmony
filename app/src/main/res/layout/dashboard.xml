<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="2">

    <!-- Admin Dashboard Title -->
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="215dp"
        android:layout_height="110dp"
        android:text="    Admin
        Dashboard"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="67dp" />

    <!-- Booking Requests Label -->
    <LinearLayout
        android:id="@+id/layoutAboveCard"
        android:layout_width="273dp"
        android:layout_height="62dp"
        android:layout_marginTop="56dp"
        android:background="#E1D7FF"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRegister">

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Booking Requests"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="106dp"
            android:layout_height="90dp"
            app:srcCompat="@android:drawable/btn_dropdown" />

    </LinearLayout>

    <!-- Main Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-88dp"
        tools:layout_editor_absoluteY="-46dp">

        <!-- Moved CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/movedCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:background="#F2E8FF"
            android:padding="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutAboveCard">

            <!-- CardView containing student info -->

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="116dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="306dp">

            <!-- Student Name -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Student Name"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Hostel Name -->
            <TextView
                android:id="@+id/tvHostelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Hostel Name"
                android:textSize="20dp" />

            <!-- Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonApprove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#6D5C95"
                    android:text="Approve"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/buttonDeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#6D5C95"
                    android:text="Deny"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="124dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="422dp">

            <!-- Student Name -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Student Name"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Hostel Name -->
            <TextView
                android:id="@+id/tvHostelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Hostel Name"
                android:textSize="20dp" />

            <!-- Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonApprove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#6D5C95"
                    android:text="Approve"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/buttonDeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#6D5C95"
                    android:text="Deny"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
